{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "NeuralDraft.Trading": "Debug"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "NeuralDraft.Trading": "Debug"
      }
    },
    "File": {
      "Path": "logs/trading-{Date}.log",
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "TradingService": {
    "PollingIntervalSeconds": 60,
    "SignalEndpoint": "http://localhost:5000/v1/physics/signal",
    "Symbols": ["BTC", "ETH", "SDNA"],
    "GameSignalEndpoint": "http://localhost:7777/v1/signal/",
    "PriceApiEndpoint": "https://api.coingecko.com/api/v3/simple/price",
    "TradeHistoryPath": "paper_trades.json",
    "MaxRetryAttempts": 3,
    "RetryDelaySeconds": 5,
    "EnableMockData": false,
    "EnableGameSignals": true,
    "GameSignalPollingMs": 100,
    "DataDirectory": "Data",
    "PositionSizing": {
      "BasePositionValue": 10000.0,
      "MaxPositionPercent": 10.0,
      "RiskPerTradePercent": 1.0
    },
    "GameSignalThresholds": {
      "LongThresholdMilli": 200,
      "ShortThresholdMilli": -200,
      "FlatZoneMilli": 50
    }
  },
  "Api": {
    "Port": 5000,
    "UseHttps": true,
    "AllowedOrigins": ["http://localhost:3000", "http://localhost:8080"],
    "RequestTimeoutSeconds": 30,
    "EnableSwagger": true,
    "EnableCors": true,
    "Compression": {
      "Enable": true,
      "Level": "Optimal"
    }
  },
  "Simulation": {
    "DefaultInitialCapital": 100000.0,
    "DefaultDays": 30,
    "DefaultSymbols": ["BTC", "ETH"],
    "TradingParameters": {
      "LongThreshold": 0.35,
      "ShortThreshold": -0.35,
      "TakeProfit": 0.03,
      "StopLoss": -0.015,
      "MaxHoldHours": 24
    }
  },
  "Security": {
    "RequireAuthentication": false,
    "ApiKey": "",
    "AllowedIps": ["127.0.0.1", "::1"],
    "RateLimiting": {
      "Enable": true,
      "MaxRequestsPerMinute": 60,
      "BurstLimit": 10
    }
  },
  "Monitoring": {
    "EnableHealthChecks": true,
    "HealthCheckIntervalSeconds": 300,
    "Metrics": {
      "Enable": true,
      "Endpoint": "/metrics",
      "CollectIntervalSeconds": 60
    },
    "Alerts": {
      "Enable": false,
      "MaxDrawdownAlert": 10.0,
      "ServiceDownAlertMinutes": 5
    }
  },
  "Persistence": {
    "AutoSaveIntervalMinutes": 5,
    "Backup": {
      "Enable": true,
      "MaxBackupFiles": 10,
      "BackupIntervalHours": 24
    },
    "Database": {
      "Enable": false,
      "ConnectionString": "",
      "Provider": "Sqlite"
    }
  },
  "Features": {
    "EnableManualTrading": false,
    "EnableSimulation": true,
    "EnableHistoricalAnalysis": true,
    "EnableRealTimeUpdates": true,
    "WebSocket": {
      "Enable": false,
      "Port": 5001
    }
  }
}
